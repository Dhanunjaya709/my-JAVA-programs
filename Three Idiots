import java.util.Scanner;public class Three
{
    public static void main(String args[])
    {
       Scanner sc=new Scanner(System.in);
       int a=sc.nextInt();
       int b=sc.nextInt();
       int c=sc.nextInt();
       int d=sc.nextInt();
       float e=(a+c)/2;
      double f=(b+d)/2.0;
       System.out.printf("Binoy's house is located at (%.1f,%.1f)",e,f);
       
    }
}
