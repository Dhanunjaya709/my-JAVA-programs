import java.util.Scanner;
public class Fee
{
    public static void main(String args[])
    {
        Scanner s=new Scanner(System.in);
        float b,c,d,e,f;
        System.out.println("Enter the student type");
        String t=s.next();
        switch(t)
        {
            
            case "MSDS":
                System.out.println("Enter tuition fee");
                b=s.nextFloat();
                System.out.println("Enter bus fee");
                c=s.nextFloat();
                System.out.printf("The fees to be paid by the student is Rs.%.2f",b+c);
                break;
            case "MSH":
                System.out.println("Enter tuition fee");
                b=s.nextFloat();
                System.out.println("Enter hostel fee");
                 d=s.nextFloat();
                System.out.printf("The fees to be paid by the student is Rs.%.2f",b+d);
                break;
                
            case "MGSDS":
                System.out.println("Enter tuition fee");
                 b=s.nextFloat();
                 e=b/2+b;
                System.out.println("Enter bus fee");
                c=s.nextFloat();
                
                System.out.printf("The fees to be paid by the student is Rs.%.2f",e+c);
                break;
                
            case "MGSH":
                System.out.println("Enter tuition fee");
                b=s.nextFloat();
                f=b/2+b;
                System.out.println("Enter hostel fee");
                d=s.nextFloat();
                System.out.printf("The fees to be paid by the student is Rs.%.2f",f+d);
                break;
        }
        
        
        
        
    }
}
