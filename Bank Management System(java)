import java.util.Scanner;
class Admin{
    private String accno;
    private String name;
    private long balance;
    Scanner Sc1=new Scanner(System.in);
    //methods to open an account
    void openAccount(){
        System.out.println("Enter the account Numberüíª:");
        accno=Sc1.next();
        System.out.println("Enter nameüëå:");
        name=Sc1.next();
        System.out.println("Enter the balanceüòä:");
        balance=Sc1.nextLong();
    }
    //nethod to display account ditails
    
        void showAccount()
        {
            System.out.println("Account Number"+accno);
            System.out.println("Account holder name"+name);
            System.out.println("Balance"+balance);
            
        }
    //method to deposit money
    void deposit()
        {
            long amount;
            System.out.println("Enter the amount you Deposit:");
            amount=Sc1.nextLong();
            balance=balance+amount;
            
        }
            
    // method to withdraw money
    void withdraw()
    {
        System.out.println("Enter the amount to withdrawüòé:");
        long amount1;
        amount1=Sc1.nextLong();
    if(balance>=amount1)
    {
        balance=balance-amount1;
    }
        else
        {
            System.out.println("Insufficient balanceüòí");
        }
    }
    //method to search an account number
    boolean search(String acn){
        if(accno.equals(acn)){
            showAccount();
            return true;}
            return (false);
            
         }
    
    }

public class Bank
{
    public static void main(String[] args)
    {
        Scanner Sc1=new Scanner(System.in);
        //create initial account
        System.out.println("How many customers you want‚ù§Ô∏è:");
        int n=Sc1.nextInt();
        Admin c[]=new Admin[n];
        for(int i=0;i<c.length;i++)//01234
        {
            c[i]=new Admin();//c[0],c[1],c[2],c[3],c[4]
            c[i].openAccount();//a/c no, name, balance
        }
        //run the loop until 5 is not pressed
        int ch;
        do{
            System.out.println("Main\n1.Display All\n2.SearchAccount\n3.deposit\n4.withdraw\n5.Exit");
            System.out.println("Enter your choice");
            ch=Sc1.nextInt();
            switch(ch){
                case 1:
                    for(int i=0;i<c.length;i++){
                        c[i].showAccount();
                    }
            break;
            case 2:
                System.out.println("Enter account");
                String acn=Sc1.next();
                boolean found=false;
                for(int i=0;i<c.length;i++){
                    found=c[i].search(acn);
                    if(found){
                        break;
                    }
                }
                if(!found){
                    System.out.println("search fail your account is invalid");
                }
            break;
            case 3:
                System.out.println("Enter account");
                acn=Sc1.next();
                found=false;
                for(int i=0;i<c.length;i++){
                    found=c[i].search(acn);
                    if(found){
                        c[i].deposit();
                    }
                }
                if(!found){
                    System.out.println("search failed your account no is invalid");
                }
            break;
            case 4:
                System.out.println("Enter account");
                acn=Sc1.next();
                found=false;
                for(int i=0;i<c.length;i++){
                    found=c[i].search(acn);
                    if(found){
                        c[i].withdraw();
                    }
                }
                if(!found){
                    System.out.println("search failed your account no is invalid");
                }
            break;
            case 5:
                System.out.println("Good bye!üôã");
                break;
            
            
        }
    }while(ch!=5);
}
    
}

